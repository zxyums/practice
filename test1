// Import lodash
const _ = require('lodash');

// Sorting options with mode logic and prioritizing numbers over strings
const options: OptionType[] = _.orderBy(
  config.options,
  [(item) => {
    if (mode === "key") {
      // Sort by key: prioritize numbers over strings
      return isNaN(Number(item.key)) ? item.key : Number(item.key);
    } else if (mode === "value") {
      // Sort by value: prioritize numbers over strings
      return isNaN(Number(item.value)) ? item.value : Number(item.value);
    }
  }],
  ['asc'] // Ascending order
);

// Output the sorted options
console.log(options);