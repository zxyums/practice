// Import lodash
const _ = require('lodash');

// Sorting options based on mode
const options: OptionType[] = _.orderBy(
  config.options,
  [(item) => {
    if (mode === "key") {
      // If mode is "key", treat the key as a number if possible
      return isNaN(Number(item.key)) ? item.key : Number(item.key);
    } else {
      // If mode is "value", sort by value directly
      return item.value;
    }
  }],
  ['asc'] // Ascending order
);

// Output the sorted options
console.log(options);