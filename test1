// Import lodash
const _ = require('lodash');

// Sorting options based on mode
const options: OptionType[] = _.orderBy(
  config.options,
  [(item) => {
    const valueToSort = mode === "key" ? item.key : item.value;
    // Check if the value is numeric (string representing a number)
    return isNaN(Number(valueToSort)) ? valueToSort : Number(valueToSort);
  }],
  ['asc'] // Ascending order
);

// Log the sorted options
console.log(options);